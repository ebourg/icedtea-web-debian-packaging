#! /bin/sh

set -e

priority=1061
basedir=/@basedir@
mandir=$basedir/jre/man
tools='javaws itweb-settings'
srcext=1.gz
dstext=1.gz

case "$1" in
configure)
    for i in $tools; do
        unset slave1 || true
        if [ -e $mandir/man1/$i.$srcext ]; then
            slave1="--slave \
                /usr/share/man/man1/$i.$dstext \
                $i.$dstext \
                $mandir/man1/$i.$srcext"
        fi
        update-alternatives \
            --install \
            /usr/bin/$i \
            $i \
            $basedir/jre/bin/$i \
            $priority \
            $slave1
    done
esac

